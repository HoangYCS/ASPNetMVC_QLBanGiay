font-style: normal;
font-variant: normal;
text-transform: uppercase;">Tồn Kho: @item.AvailableQuality.ToString("#,##0")</span><br>
</div>
<div class="rating-box pb-2">
    <ul>
        <li><i class="fas fa-star fa-fade" style="color: #35e212;"></i></li>
        <li><i class="fas fa-star fa-fade" style="color: #35e212;"></i></li>
        <li><i class="fas fa-star fa-fade" style="color: #35e212;"></i></li>
        <li><i class="fas fa-star fa-fade" style="color: #35e212;"></i></li>
        <li><i class="far fa-star fa-fade" style="color: #5dbc10;"></i></li>
    </ul>
</div>
<p class="short-desc mb-0">
    @{
        var action = "";
        if (item.Description == null)
        {
            action = "NaN";

        }
        else
        {
            action = item.Description;
        }
    }
    Descripttion: @action
</p>
</div>
</div>
</div>
}
}
        </div>
    </div>
</div>

