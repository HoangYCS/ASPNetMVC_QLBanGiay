<script>
    var collapseElement = document.querySelector('#price-filter');
    var showMoreButton = document.createElement('button');
    var elementHeight = collapseElement.clientHeight;
    if (elementHeight > 195) {
        collapseElement.style.height = '195px';
        collapseElement.style.overflow = 'hidden';
        showMoreButton.className = 'btn btn-outline-success btn-floating';
        showMoreButton.type = 'button';
        showMoreButton.style.display = 'block';
        showMoreButton.style.margin = '5px auto 0';

        var starIcon = document.createElement('i');
        starIcon.className = 'fas fa-angle-down';
        showMoreButton.appendChild(starIcon);

        collapseElement.parentNode.insertBefore(showMoreButton, collapseElement.nextSibling);

        showMoreButton.addEventListener('click', function () {
            if (collapseElement.style.height === 'auto') {
                starIcon.className = 'fas fa-angle-down';
                showMoreButton.appendChild(starIcon);
                collapseElement.style.height = '195px';
            } else {
                starIcon.className = 'fas fa-angle-up';
                showMoreButton.appendChild(starIcon);
                collapseElement.style.height = 'auto';
            }
        });

    } else {
        showMoreButton.style.display = 'none';
    }
</script>

