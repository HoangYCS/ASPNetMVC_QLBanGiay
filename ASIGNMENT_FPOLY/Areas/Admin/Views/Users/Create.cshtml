@model ASIGNMENT_FPOLY.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <font><a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i></a> <span class="breadcrumb-item active">PRODUCT</span> <a class="breadcrumb-item" asp-action="Index">Product</a><a class="breadcrumb-item" href="#">Create Product</a></font>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4>Create Product</h4>
        <div class="m-t-25">
            <div id="data-table_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="UserName" class="control-label"></label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PassWord" class="control-label"></label>
                                    <input asp-for="PassWord" class="form-control" />
                                    <span asp-validation-for="PassWord" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Category</label>
                                    @Html.DropDownListFor(model => model.RoleId, ViewBag.Role as SelectList, "--Select Role--", new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Stattus</label>
                                    <input asp-for="Stustus" class="form-control" />
                                    <span asp-validation-for="Stustus" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
